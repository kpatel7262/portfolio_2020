@model HumberAreaHospitalProject.Models.SocialServiceClubs
@{
    ViewBag.Title = "Update";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <h2>Edit Details for @Model.SocialServiceClubs_title</h2>
    <button class="btn btn-secondary">
        <a href="/SocialServiceClubs/List">Back to List</a>
    </button>
    <div>
        <form method="post" action="/SocialServiceClubs/Update/@Model.SocialServiceClubs_id">
            <div class="form-group">
                <label for="SocialServiceClubs_title">Title:</label>
                <input class="form-control" type="text" name="SocialServiceClubs_title" id="SocialServiceClubs_title" value="@Model.SocialServiceClubs_title" />
            </div>
            <div class="form-group">
                <label for="SocialServiceClubs_details">Details:</label>
                <textarea class="form-control" rows="5" cols="25" name="SocialServiceClubs_details" id="SocialServiceClubs_details">@Model.SocialServiceClubs_details</textarea>
            </div>
            <div class="form-group">
                <label for="SocialServiceClubs_address">Address:</label>
                <input class="form-control" type="text" name="SocialServiceClubs_address" id="SocialServiceClubs_address" value="@Model.SocialServiceClubs_address" />
            </div>
            <div class="form-group">
                <label for="SocialServiceClubs_map">Map:</label>
                <input class="form-control" type="url" name="SocialServiceClubs_map" id="SocialServiceClubs_map" value="@Model.SocialServiceClubs_map" />
            </div>
            <div class="form-group">
                <label for="SocialServiceClubs_Website">Website:</label>
                <input class="form-control" type="text" name="SocialServiceClubs_website" id="SocialServiceClubs_website" value="@Model.SocialServiceClubs_website" />
            </div>
            <div class="controls">
                <input class="btn btn-secondary" type="submit" value="Update" />
            </div>
        </form>

    </div>
</body>
</html>

