@model HumberAreaHospitalProject.Models.Article
@{
    ViewBag.Title = "Delete";
}
<h2>Delete Article</h2>
<p class="text-danger text-uppercase">Are you sure you want to delete this?</p>
<div>
    <dl class="dl-horizontal">
        <dt>Title</dt>
        <dd>@Model.ArticleTitle</dd>
        <dt>Author</dt>
        <dd>@Model.Authors.AuthorFname @Model.Authors.AuthorLname</dd>
        <dt>Published</dt>
        <dd>@Model.Published.ToString("yyyy-MMM-dd")</dd>
        <dt>Content</dt>
        <dd>@Model.ArticleBody</dd>

        <dt>Featured</dt>
        <dd>@Model.Featured</dd>
    </dl>
</div>
<form method="POST">
    <button type="submit" class="btn btn-danger pull-right">Delete</button>
</form>
<a href="/Article/List">Back to List</a> 