@model HumberAreaHospitalProject.Models.ViewModels.StaffSpecialty
@{
    ViewBag.Title = "Update";
}

<form method="POST" action="/Staff/Update/@Model.staff.staffId">
    <h1>Staff</h1>
    <div>
        <label>First name:</label>
        <input class="form-control" type="text" name="firstName" value="@Model.staff.staffFname"/>
    </div>
    <div>
        <label>Last name:</label>
        <input class="form-control" type="text" name="lastName" value="@Model.staff.staffLname" />
    </div>
    <div>
        <label>Phone:</label>
        <input class="form-control" type="email" name="email" value="@Model.staff.staffEmail"/>
    </div>
    <div>
        <label>Email:</label>
        <input class="form-control" type="text" name="ext" value="@Model.staff.staffExt"/>
    </div>

    <div>
        <select type="text" name="specialtyID">
            @{
                foreach (var specialty in @Model.Specialities)
                {
                    <option value="@specialty.SpecialityID">@specialty.Name</option>
                }
            }
        </select>
    </div>
    <div>
        <input type="submit" name="submit" value="Update" class="btn" />
    </div>
</form>