@model HumberAreaHospitalProject.Models.Job
@{
    ViewBag.Title = "Update";
}

<h2>Add New Job</h2>
<div class="navbar">
    <a class="navlink" href="/Application/List">Back to List</a>
</div>
<form method="POST" action="/Application/Update/@Model.JobID">
        <div class="form-group">
            <label class="col-sm-2 col-form-lable">Title of Job</label>
            <input type="text" class="form-control" id="name" name="JobTitle"  value="@Model.JobTitle"/>
        </div>
        <div class="form-group">
            <label class="col-sm-2 col-form-lable">Category of Job</label>
            <input type="text" class="form-control" id="name" name="JobCategory" value="@Model.JobCategory" />
        </div>
        <div class="form-group">
            <label class="col-sm-2 col-form-lable">Job Type</label>
            <input type="text" class="form-control" id="name" name="JobType"  value="@Model.JobType"/>
        </div>
        <div class="form-group">
            <label class="col-sm-2 col-form-lable">Description</label>
            <textarea class="form-control" cols="20" name="Description" rows="2">@Model.Description</textarea>
        </div>
        <div class="form-group">
            <label class="col-sm-2 col-form-lable">Requirements</label>
            <textarea class="form-control" cols="20" name="Requirements" rows="2">@Model.Requirements</textarea>
        </div>


        <div class="inpfield">
            <input type="submit" class="btn btn-primary" value="Update">
        </div>
</form>