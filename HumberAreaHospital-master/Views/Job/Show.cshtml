@model HumberAreaHospitalProject.Models.ViewModels.ShowJob
@{
    ViewBag.Title = "Show";
}

<h2>@Model.Job.JobTitle </h2>

<div class="navbar">
    <a class="navlink" href="/Job/List">Back to List</a>
    <a class="navlink" href="/Job/Update/@Model.Job.JobID">Update</a>
    <a class="navlink" href="/Job/DeleteConfirm/@Model.Job.JobID">Delete</a>
</div>
<div>
    <div class="col2">
        <dl class="row">
            <dt class="col-sm-3">Job Category</dt>
            <dd class="col-sm-9">@Model.Job.JobCategory</dd>
        </dl>
        <dl class="row">
                 <dt class="col-sm-3">Job Type</dt>
                 <dd class="col-sm-9">@Model.Job.JobType</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-3">Post Date</dt>
            <dd class="col-sm-9">@Model.Job.PostDate.ToString("dd/MM/yyyy")</dd>
        </dl>
    </div>

</div>



<div class="col-sm ">
    <div class="h2">Applicant List</div>
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email ID</th>
                <th>Applplied on </th>
                <th colspan="2">Action</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var Applications in @Model.Applications)
                {
                    <tr>
                        <td><a href="/Seeker/ShowSeeker/@Applications.ApplicationID">@Applications.ApplicantFirstName</a></td>
                        <td>@Applications.ApplicantEmail</td>
                        <td>@Applications.ApplicationDate.ToString("dd/MM/yyyy")</td>
                        <td>
                            <span><a href="/Application/Delete/@Applications.ApplicationID"><p data-placement="top" data-toggle="tooltip" title="Delete"><button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete"><span class="glyphicon glyphicon-trash"></span></button></p>   </a></span>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
