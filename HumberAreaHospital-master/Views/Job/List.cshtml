@model List<HumberAreaHospitalProject.Models.Job>
@{
    ViewBag.Title = "List";
}

<h2>List of Job Postings</h2>
<div>
    <a href="/Job/New" class="btn btn-primary" style="float:right">ADD JOB</a>
</div>
<form action="/Job/List" method="GET">
    <input type="text" name="jobsearchkey" id="jobsearchkey" />
    <input type="submit" value="Search" />
</form>
<table id="mytable" class="table table-bordred table-striped">
    <thead>
        <th>JOB TITLE</th>
        <th>JOB CATEGORY</th>
        <th>JOB TYPE</th>
        <th>POSTED ON</th>
        <th>EDIT </th>
        <th>DELETE </th>
    </thead>
    <tbody>
        @{
            foreach (var job in Model)
            {
                <tr>
                    <td><span><a href="/Job/User_Show/@job.JobID">@job.JobTitle</a></span></td>
                    <td><span>@job.JobCategory</span></td>
                    <td><span>@job.JobType</span></td>
                    <td><span>@job.PostDate.ToString("dd/MM/yyyy")</span></td>
                    <td> <span><a href="/Job/Update/@job.JobID"><p data-placement="top" data-toggle="tooltip" title="Edit"><button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit"><span class="glyphicon glyphicon-pencil"></span></button></p>   </a></span></td>
                    <td><span><a href="/Job/Delete/@job.JobID"><p data-placement="top" data-toggle="tooltip" title="Delete"><button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete"><span class="glyphicon glyphicon-trash"></span></button></p>   </a></span></td>
                </tr>
            }
        }
    </tbody>
</table>
<div class="text-center">
    @{
        <a href="/Job/List?pagenum=@((int)ViewData["pagenum"]-1)&jobsearchkey=@ViewData["jobsearchkey"]">Prev</a>
        @ViewData["pagesummary"]
        <a href="/Job/List?pagenum=@((int)ViewData["pagenum"]+1)&jobsearchkey=@ViewData["jobsearchkey"]">Next</a>
    }
</div>

