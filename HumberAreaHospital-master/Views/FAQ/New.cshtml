@model  List<HumberAreaHospitalProject.Models.FAQCategory>
@{
    ViewBag.Title = "Add";
}

<h2>Add a New FAQ</h2>
<div class="navbar">
    <a class="navlink" href="/FAQ/List">Back to List</a>
</div>
<form method="POST" action="/FAQ/New">
    <div class="form-group">
        <label class="col-sm-2 col-form-lable">Category</label>
        <select id="categoryID" class="form-control" type="text" name="FAQCategoryID">
            @{

                foreach (var FAQCategory in Model)
                {
                    <option value="@FAQCategory.FAQCategoryID">@FAQCategory.FAQCategoryName</option>

                }
            }
        </select>
    </div>
    <div class="form-group">
        <label class="col-sm-2 col-form-lable">FAQ QUESTION</label>
        <textarea class="form-control" cols="20" name="FAQQuestion" rows="2"></textarea>
    </div>
    <div class="form-group">
        <label class="col-sm-2 col-form-lable">FAQ ANSWER</label>
        <textarea class="form-control" cols="20" name="FAQAnswer" rows="2"></textarea>
    </div>

    <div class="inpfield">
        <input type="submit" value="ADD FAQ">
    </div>
</form>

