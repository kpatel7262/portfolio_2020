@model List<HumberAreaHospitalProject.Models.RemedySource>

@{
    ViewBag.Title = "List";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <h2>List of Remedy Sources</h2>
    <button class="btn btn-secondary"><a href="/RemedySource/New">Add Remedy Source</a></button>

    <form action="/RemedySource/List" class="form-inline" method="GET">
        <input type="text" class="form-control" name="remedysrcsearchkey" id="remedysrcsearchkey" />
        <input type="submit" class="btn btn-info" value="Search" />
    </form>
    <div class="col-lg-12">
        @{
            foreach (var remedysrc in Model)
            {
                <div class="col-md-4">
                    <h3><a href="/RemedySource/View/@remedysrc.RemedySource_id">@remedysrc.RemedySource_name</a></h3>
                    <p><a href="@remedysrc.RemedySource_url">@remedysrc.RemedySource_url</a></p>

                    <p>
                        <a href="/RemedySource/Update/@remedysrc.RemedySource_id" class="btn btn-default" type="button">Update</a>
                        <a href="/RemedySource/Delete/@remedysrc.RemedySource_id" class="btn btn-default" type="button">Delete</a>
                    </p>
                </div>

            }

        }

    </div>

    <nav aria-label="Page navigation example">
        <ul class="paginate pagination">
            @{
                <li class="page-item">
                    <a class="page-link" href="/RemedySource/List?pagenum=@((int)ViewData["pagenum"]-1)&remedysrcsearchkey=@ViewData["remedysrcsearchkey"]">Prev</a>
                </li>

                <li class="page-item"><a class="page-link">@ViewData["pagesummary"]</a></li>

                <li class="page-item">
                    <a class="page-link" href="/RemedySource/List?pagenum=@((int)ViewData["pagenum"]+1)&remedysrcsearchkey=@ViewData["remedysrcsearchkey"]">Next</a>
                </li>
            }
        </ul>
    </nav>
</body>
</html>
