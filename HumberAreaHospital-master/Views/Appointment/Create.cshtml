@model HumberAreaHospitalProject.Models.ViewModels.AppointmentViewModel
@{
    ViewBag.Title = "Create";
}

    <form method="POST" action="/Appointment/Create">
        <h1>Appointment</h1>
        <div>
            <label>First name:</label>
            <input class="form-control" type="text" name="firstName" />
        </div>
        <div>
            <label>Last name:</label>
            <input class="form-control" type="text" name="lastName" />
        </div>
        <div>
            <label>Phone:</label>
            <input class="form-control" type="text" name="phoneNum" />
        </div>
        <div>
            <label>Email:</label>
            <input class="form-control" type="email" name="email" />
        </div>
        <div>
            <label>Date:</label>
            <input class="form-control" type="datetime" name="dateTime" />
        </div>
        <div>
            <select type="text" name="doctorID">
                @{
                    foreach (var doctor in @Model.doctors)
                    {
                        <option value="@doctor.DoctorID">@doctor.DoctorFname @doctor.DoctorLname</option>
                    }
                }
            </select>
        </div>
        <div>
            <input type="submit" name="submit" value="Create" class="btn" />
        </div>
    </form>