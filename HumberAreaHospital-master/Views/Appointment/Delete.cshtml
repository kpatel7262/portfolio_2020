@model HumberAreaHospitalProject.Models.Appointment
@{
    ViewBag.Title = "Delete";
}

<p>Are you sure you want to delete this appointment for @Model.appointmentFname @Model.appointmentLname ?</p>
<form method="POST" action="/Appointment/DeleteApp/@Model.appointmentId">
    <div>
        <input type="submit" value="Confirm" />
    </div>
</form>
<div>
    <a class="btn" href="/Appointment/List">Cancel</a>
</div>