@model HumberAreaHospitalProject.Models.Author
@{
    ViewBag.Title = "Delete";
}
<h2>Delete Author</h2>
<p class="text-danger text-uppercase">Are you sure you want to delete this?</p>
<div>
    <dl class="dl-horizontal">
        <dt>First Name</dt>
        <dd>@Model.AuthorFname</dd>
        <dt>Last Name</dt>
        <dd>@Model.AuthorLname</dd>
        <dt>Email</dt>
        <dd>@Model.Email</dd>
        <dt>Phone</dt>
        <dd>@String.Format("{0:(###) ###-####}", Convert.ToInt64(Model.Phone))</dd>
    </dl>
</div>
<form method="POST">
    <button type="submit" class="btn btn-danger pull-right">Delete</button>
</form>
<a href="/Author/List">Back to List</a> 