@model HumberAreaHospitalProject.Models.Author
@{
    ViewBag.Title = "Create";
}
<h2>Create Author</h2>

<form method="POST" action="">
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-md-2" for="authorFname">First Name</label>
            <div class="col-md-10">
                <input type="text" class="form-control" name="authorFname" id="authorFname" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="authorLname">Last Name</label>
            <div class="col-md-10">
                <input type="text" class="form-control" name="authorLname" id="authorLname" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="email">Email</label>
            <div class="col-md-10">
                <input type="text" class="form-control" name="email" id="email" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="phone">Phone</label>
            <div class="col-md-10">
                <input type="text" class="form-control" name="phone" id="phone" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary">+ Add New Author</button>
            </div>
        </div>
    </div>
</form>
<div>
    <a href="/Author/List">Back to List</a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
