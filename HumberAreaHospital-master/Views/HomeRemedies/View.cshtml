@model HumberAreaHospitalProject.Models.HomeRemedies

@{
    ViewBag.Title = "View";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div class="form-group">
        <h2>Details for @Model.HomeRemedies_title</h2>
        <button class="btn btn-secondary">
            <a href="/HomeRemedies/List">Back to List</a>
        </button>

        <div>
            <label>Title:</label>
            <div>@Model.HomeRemedies_title</div>
        </div>
        <div>
            <label>Description:</label>
            <div>@Model.HomeRemedies_desc</div>
        </div>


        <div class="controls">
            <a href="/HomeRemedies/Update/@Model.HomeRemedies_id" class="control-button btn btn-default">Update</a>

            <a href="/HomeRemedies/Delete/@Model.HomeRemedies_id" class="control-button btn btn-default">Delete</a>
        </div>

    </div>
</body>
</html>
