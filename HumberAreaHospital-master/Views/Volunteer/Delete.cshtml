@model HumberAreaHospitalProject.Models.Volunteer
@{
    ViewBag.Title = "Delete";
}
<h2>Delete Volunteer</h2>
<p class="text-danger text-uppercase">Are you sure you want to delete this?</p>
<div>
    <dl class="dl-horizontal">
        <dt>First Name</dt>
        <dd>@Model.VolunteerFname</dd>
        <dt>Last Name</dt>
        <dd>@Model.VolunteerLname</dd>
        <dt>Address</dt>
        <dd>@Model.Address</dd>
        <dt>Email</dt>
        <dd>@Model.Email</dd>
        <dt>Home Phone</dt>
        <dd>@String.Format("{0:(###) ###-####}", Convert.ToInt64(Model.HomePhone))</dd>
        <dt>Work Phone</dt>
        <dd>@String.Format("{0:(###) ###-####}", Convert.ToInt64(Model.WorkPhone))</dd>
        <dt>Skills</dt>
        <dd>@Model.Skills</dd>
        <dt>Day</dt>
        <dd>@Model.Day</dd>
        <dt>Time</dt>
        <dd>@Model.Time</dd>
        <dt>Department</dt>
        <dd>@Model.Preference</dd>
        <dt>Notes</dt>
        <dd>@Model.Notes</dd>
    </dl>
</div>
<form method="POST">
    <button type="submit" class="btn btn-danger pull-right">Delete</button>
</form>
<a href="/Volunteer/List">Back to List</a>
